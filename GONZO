# Configure mesa (in root dir):
# Intel and zink
meson-1.3 setup gonzo-intel-zink -Dbackend=ninja -Dintel-clc=enabled -Dvulkan-drivers=intel -Dgallium-drivers=iris,zink,swrast -Dprefix=~/bin/mesa
# Nouveau and nvk
meson-1.3 setup gonzo-nouveau -Dbackend=ninja -Dvulkan-drivers=nouveau-experimental -Dprefix=~/bin/mesa
# Panfrost
~/src/mesaon/meson.py setup gonzo-panfrost -Dbackend=ninja -Dvulkan-drivers=help -Dprefix=~/bin/mesa

# Build
cd gonzo-*; meson compile

# Get rid of unknown options for SLP
sed -i 's/-mtls-dialect=gnu2 //g' compile_commands.json
sed -i 's/-flifetime-dse=1 //g' compile_commands.json
